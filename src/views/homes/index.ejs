<% layout("layouts/boilerplate") %>
<div class="mb-3" id="cluster-map"></div>
<h1 class="mb-3">All homes</h1>
<div>
  <button
    class="btn btn-primary mb-3"
    onclick='location.href="/homes/new"'
  >
    Add homes
  </button>
</div>

<% for (let home of homes) { %>
    <div class="card mb-3">
        <div class="col-md-4">
            <% if (home.images.length) { %>
                <img crossorigin="anonymous" class="img-fluid" src="<%= home.images[0].url %>"
                alt="home Image"> 
            <% } else { %>
                <img
                crossorigin="anonymous"
                class="img-fluid"
                src="https://res.cloudinary.com/dghmtarj6/image/upload/v1711813451/YelpCampm/aivh2lxlgdwk1jgzkmui.png"
                alt="home Image"
                />
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= home.title %></h5>
                <p class="card-text"><%= home.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= home.location %></small>
                </p>
                <a class="btn btn-primary" href="/homes/<%= home._id %>">
                    View <%= home.title %>
                </a>
            </div>
        </div>
    </div>
<% } %>
<script>
    const mapToken = `<%- process.env.MAPBOX_TOKEN %>`;
    const homes = {features: <%- JSON.stringify(homes) %>}
    console.log(homes)
</script>
<script src="/javascripts/clusterMap.js"></script>
